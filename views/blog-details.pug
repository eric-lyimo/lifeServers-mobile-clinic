extends ./layout/layout.pug
block content
   include ./layout/sideBar.pug
        <div class="page-wrapper">
        <div class="content">
        <div class="row">
        <div class="col-sm-12">
        <h4 class="page-title">Blog View</h4>
        </div>
        </div>
        <div class="row">
        <div class="col-md-8">
        <div class="blog-view">
        <article class="blog blog-single-post">
        <h3 class="blog-title">#{data.title}</h3>
        <div class="blog-info clearfix">
        <div class="post-left">
        <ul>
        <li><a href="#."><i class="fa fa-calendar"></i> <span>#{data.date}</span></a></li>
        <li><a href="#."><i class="fa fa-user-o"></i> <span>By #{data.author.username}</span></a></li>
        </ul>
        </div>
        <div class="post-right"><a href="#."><i class="fa fa-comment-o"></i>#{comentLength} Comment</a></div>
        </div>
        <div class="blog-image">
        <a href="#."><img alt="" src="data:image/jpg;base64,#{data.blog_img}" class="img-fluid"></a>
        </div>
        <div class="blog-content">
        <p>#{data.description}</p>
        </div>
        </article>
        <div class="widget blog-share clearfix">
        <h3>Share the post</h3>
        <ul class="social-share">
        <li><a href="#." title="Facebook"><i class="fa fa-facebook"></i></a></li>
        <li><a href="#." title="Twitter"><i class="fa fa-twitter"></i></a></li>
        <li><a href="#." title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
        <li><a href="#." title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
        <li><a href="#." title="Youtube"><i class="fa fa-youtube"></i></a></li>
        </ul>
        </div>

        <div class="widget author-widget clearfix">
        <h3>About author</h3>
        <div class="about-author">
        <div class="about-author-img">
        <div class="author-img-wrap">
        <img class="img-fluid rounded-circle" alt="" src="assets/img/user.jpg">
        </div>
        </div>
        <div class="author-details">
        <span class="blog-author-name">#{data.author.username}</span>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
        </div>
        </div>
        </div>

        <div class="widget blog-comments clearfix">
        <h3>Comments (#{comentLength})</h3>
        <ul class="comments-list">
          each comments in coment
            <li>
            <div class="comment">
            <div class="comment-author">
            <img class="avatar" alt="" src="assets/img/user.jpg">
            </div>
            <div class="comment-block">
            <span class="comment-by">
            <span class="blog-author-name">#{comments.name}</span>
            <span class="float-right">
            <span class="blog-reply"><a href="#."><i class="fa fa-reply"></i> Reply</a></span>
            </span>
            </span>
            <p>#{comments.comments}</p>
            <span class="blog-date">#{comments.date}</span>
            </div>
            </div>
            </li>
        </ul>
        </div>
        <div class="widget new-comment clearfix">
        <h3>Leave Comment</h3>
        <form action="/comments" method="post">
        <div class="row">
        <div class="col-sm-8">
        <div class="form-group">
        <label>Name <span class="text-red" >*</span></label>
        <input type="text" class="form-control" name="name">
        </div>
        <input type="text" hidden="true" class="form-control" name="blog" value=#{data._id}>
        <div class="form-group">
        <label>Comments</label>
        <textarea rows="4" class="form-control" name="comments"></textarea>
        </div>
        <div class="comment-submit">
        <input type="submit" value="Submit" class="btn">
        </div>
        </div>
        </div>
        </form>
        </div>
        </div>
        </div>
        <aside class="col-md-4">
        <div class="widget search-widget">
        <h5>Blog Search</h5>
        <form class="search-form">
        <div class="input-group">
        <input type="text" placeholder="Search..." class="form-control">
        <div class="input-group-append">
        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
        </div>
        </div>
        </form>
        </div>

        <div class="widget post-widget">
        <h5>Latest Posts</h5>
        <ul class="latest-posts">
         each blog in blogs
            <li>
            <div class="post-thumb">
            <a href="blog-details?id=#{blog._id}"">
            <img class="img-fluid" src="data:image/jpg;base64,#{blog.blog_img}" alt="">
            </a>
            </div>
            <div class="post-info">
            <h4>
            <a href="blog-details?id=#{blog._id}">#{blog.title}</a>
            </h4>
            <p><i aria-hidden="true" class="fa fa-calendar"></i>#{blog.date}</p>
            </div>
            </li>
        </ul>
        </div>
        <div class="widget category-widget">
        <h5>Blog Categories</h5>
        <ul class="categories">
        <li><a href="#."><i class="fa fa-long-arrow-right">#{data.blog_category}</i></a></li>
        </ul>
        </div>
        <div class="widget tags-widget">
        <h5>Tags</h5>
        <ul class="tags">
        <li><a href="#." class="tag">#{data.blog_tags}</a></li>
        </ul>
        </div>
        </aside>
        </div>
        </div>
        </div>
        <div class="sidebar-overlay" data-reff=""></div>
        block scripts
