extends ./layout/layout.pug
block content
   include ./layout/sideBar.pug
      <div class="main-wrapper">
         <div class="header">
            <div class="header-left">
               <a href="#" class="logo">
                  <img src="assets/img/logo.png" width="35" height="35" alt=""> <span>Life Servers</span>
               </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <a id="mobile_btn" class="mobile_btn float-left" href="login.html"><i class="fa fa-bars"></i></a>
            <ul class="nav user-menu float-right">
               <li class="nav-item dropdown has-arrow">
                  <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                     <span class="user-img"><img class="rounded-circle" src="assets/img/user.jpg" width="40" >
                        <span class="status online"></span>
                     </span>
                     <span>Register / Login</span>
                  </a>
                  <div class="dropdown-menu">
                     <a class="dropdown-item" href="/login">Login</a>
                     <a class="dropdown-item" href="/register">Sign Up</a>
                  </div>
               </li>
            </ul> 
         </div> 

         <div class="page-wrapper">
            <div class="content">
               <div class="row">
                  <div class="col-sm-4 col-3">
                     <h4 class="page-title">OUR DOCTORS</h4>
                  </div>
               </div>
            
               <div class="row doctor-grid">
                  each dr in doc
                     <div class="col-md-4 col-sm-4  col-lg-3">
                           <div class="profile-widget">
                              <div class="doctor-img">
                                 <a class="avatar" href="profile.html"><img alt="" src="data:image/png;base64,#{dr.img}"></a>
                              </div>
                              
                              <h4 class="doctor-name text-ellipsis"><a href="profile.html">#{dr.first_name + " "+ dr.last_name}</a></h4>
                              <div class="doc-prof">#{dr.specialist}</div>
                              <div class="user-country">
                                 <i class="fa fa-map-marker"></i>#{dr.address}
                              </div>
                           </div>
                     </div>
               </div>
            </div>       
            <div class="content">
               <div class="row">
                  <div class="col-sm-8 col-4">
                     <h4 class="page-title">COMMUNITY PLAZA</h4>
                  </div> 
               </div>
               <div class="row dummy">
                  each blog in blogList
                     <div class="col-sm-6 col-md-6 col-lg-4">
                        <div class="blog grid-blog">
                           <div class="blog-image">
                              <a href="blog-details?id=#{blog._id}"><img class="img-fluid" src="data:image/jpg;base64,#{blog.blog_img}" alt=""></a>
                           </div>
                           <div class="blog-content" >
                              <h3 class="blog-title" style="height:5px;padding-bottom:30px">#{blog.title}</h3>
                              <p>#{blog.description}</p>
                              <a href="blog-details?id=#{blog._id}" class="read-more"><i class="fa fa-long-arrow-right"></i> Read More</a>
                              <div class="blog-info clearfix">
                                 <div class="post-left">
                                    <ul>
                                       <li><a href="#."><i class="fa fa-calendar"></i> <span>#{blog.date}</span></a></li>
                                    </ul>
                                 </div>
                                 <div class="post-right"><a href="#."><i class="fa fa-heart-o"></i></a> <a href="#."><i class="fa fa-eye"></i></a> <a href="blog-details?id=#{blog._id}"><i class="fa fa-comment-o"></i></a></div>
                              </div>
                           </div>
                        </div>
                     </div>   
                  </div>
               </div>
            </div>
         </div>
      </div>
      <div class="sidebar-overlay" data-reff=""></div>
      script(src="assets/js/readMoreJS.min.js")
      script.
         $readMoreJS.init({
            target: '.dummy p',
            numOfWords: 20,
            toggle: true,
            lessLink: 'read less'
         });
